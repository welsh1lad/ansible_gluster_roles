Vagrant.configure("2") do |config|
  config.vm.define "vm_gluster1" do |subconfig|
    subconfig.vm.box = "bento/centos-7.5"
    subconfig.vm.hostname = "vagrant-gluster1"
    subconfig.vm.network :private_network, ip: "10.11.13.50"
    subconfig.vm.provision :shell, path: "bootstrap.sh"
  end
  config.vm.define "vm_gluster2" do |subconfig|
    subconfig.vm.box = "bento/centos-7.5"
    subconfig.vm.hostname = "vagrant-gluster2"
    subconfig.vm.network :private_network, ip: "10.11.13.51"
    subconfig.vm.provision :shell, path: "bootstrap.sh"
  end

end